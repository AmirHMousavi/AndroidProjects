<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:drawable/editbox_background_normal">

    <ImageView
        android:id="@+id/W_imageView"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/W_titleView"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/W_imageView"
        android:text="Medium Text"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/W_descView"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/W_titleView"
        android:layout_toLeftOf="@+id/W_imageView"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/W_dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/W_descView"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        android:typeface="serif" />

</RelativeLayout>
