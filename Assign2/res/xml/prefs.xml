<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        
        android:key="bgColor"
        android:summary="select the background color here"
        android:title="backGround Color" 
        android:entries="@array/array_colors"
        android:entryValues="@array/colors_value"
        android:defaultValue="yellow"/>
    
    <ListPreference
        
        android:key="fontSize"
        android:summary="select the font size here"
        android:title="font Size"
        android:entries="@array/fontSize_array"
        android:entryValues="@array/fontSize_array"
        android:defaultValue="24"/>
    

</PreferenceScreen>